<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/miniplayer"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background_player_bar"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/miniplayer_album"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/default_album_s" />

    <ImageView
        android:id="@+id/miniplayer_bg_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/background2_play"
        android:paddingTop="2dp"
        android:src="@drawable/backgroud_play" />

    <ImageButton
        android:id="@+id/miniplayer_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/miniplayer_bg_play"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:background="@null"
        android:padding="15dp"
        android:src="@drawable/player_play" />

    <ImageButton
        android:id="@+id/miniplayer_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="15dp"
        android:src="@drawable/player_next" />

    <TextView
        android:id="@+id/miniplayer_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/miniplayer_play"
        android:layout_toRightOf="@id/miniplayer_album"
        android:singleLine="true"
        android:text="@string/title_default"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/miniplayer_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/miniplayer_song"
        android:layout_below="@id/miniplayer_song"
        android:layout_toLeftOf="@id/miniplayer_play"
        android:layout_toRightOf="@id/miniplayer_album"
        android:singleLine="true"
        android:text="@string/artist_default"
        android:textColor="@color/lightgrey"
        android:textSize="12sp" />
</RelativeLayout>
