<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/local_actionbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/actionbar_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sel_main_actionbar_item"
                android:padding="15dp"
                android:src="@drawable/actionbar_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/pink" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/line_actionbar_divider" />

        <TextView
            android:id="@+id/actionbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="当前位置"
            android:textSize="18sp"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/actionbar_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sel_main_actionbar_item"
            android:padding="15dp"
            android:visibility="gone"
            android:src="@drawable/actionbar_scan" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pink" />
</LinearLayout>